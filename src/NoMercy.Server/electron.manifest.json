{
  "executable": "NoMercy.Server",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "NoMercyMediaServer",
  "description": "The Effortless Encoder",
  "author": "Stoney_Eagle",
  "singleInstance": true,
  "environment": "Production",
  "aspCoreBackendPort": 7626,
  "aspCoreBackendUrl": "https://0.0.0.0:7626",
  "useHttps": true,
  "directories": {
    "output": "../../../out"
  },
  "build": {
    "appId": "tv.NoMercy.app",
    "productName": "NoMercy",
    "copyright": "Copyright Â© 2024",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "appImage": {
      "artifactName": "${name}-${version}-setup.${ext}"
    },
    "icon": "../../../Assets/icon.ico",
    "win": {
      "target": [
        "nsis"
      ],
      "executableName": "NoMercyMediaServer",
      "icon": "../../../Assets/icon.ico",
      "legalTrademarks": "(c) 2023 NoMercy Entertainment",
      "publisherName": "NoMercy Entertainment",
      "compression": "maximum"
    },
    "nsis": {
      "artifactName": "${name}-${version}-setup.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": "always"
    },
    "directories": {
      "output": "../../../out"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [
          "**/*"
        ]
      },
      "**/*"
    ]
  }
}